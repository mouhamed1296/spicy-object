{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "rootDir": "./src",
      "outDir": "./lib",
      "alwaysStrict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true, 
      "noImplicitReturns": true, 
      "noUnusedParameters": true, 
      "noUnusedLocals": true, 
      "noImplicitAny": true, 
      "noImplicitThis": true, 
      "strictNullChecks": true,
      "noEmitOnError": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}